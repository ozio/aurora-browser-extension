{
  "extends": [
    "tslint-eslint-rules"
  ],
  "rules": {
    "no-trailing-whitespace": true,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "max-line-length": [
      true,
      120
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "match-default-export-name": false,
    "prefer-const": true,
    "no-var-keyword": true,
    "object-literal-shorthand": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "no-eval": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "align": [
      true,
      "arguments",
      "parameters"
    ],
    "ter-prefer-arrow-callback": [
      true
    ],
    "arrow-parens": false,
    "ter-arrow-parens": [
      true,
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "brace-style": [
      true,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-preblock",
      "check-type"
    ],
    "eofline": true,
    "space-in-parens": [
      true,
      "never"
    ],
    "array-bracket-spacing": [
      true,
      "never"
    ],
    "object-curly-spacing": [
      true,
      "always"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "radix": true,
    "no-construct": true,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "static-method",
          "instance-field",
          "private-instance-field",
          "constructor",
          "private-instance-method",
          "instance-method"
        ]
      }
    ]
  }
}
